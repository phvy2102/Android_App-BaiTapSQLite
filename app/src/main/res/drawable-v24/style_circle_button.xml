<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FD0505"
                android:centerColor="#F46060"
                android:endColor="#FA7979"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#58B9E4"
                android:centerColor="#2FC0ED"
                android:endColor="#091540"/>
        </shape>
    </item>
</selector>